local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer

-- Tạo GUI trong PlayerGui cho dễ quản lý và không bị lỗi khi respawn
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "InfoDisplay"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Label hiển thị thông tin
local infoLabel = Instance.new("TextLabel")
infoLabel.Size = UDim2.new(0, 350, 0, 70)
infoLabel.Position = UDim2.new(0, 10, 0, 10) -- góc trái trên
infoLabel.BackgroundTransparency = 1
infoLabel.TextScaled = true
infoLabel.Font = Enum.Font.SourceSansBold
infoLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
infoLabel.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
infoLabel.TextStrokeTransparency = 0.6
infoLabel.TextXAlignment = Enum.TextXAlignment.Left
infoLabel.TextYAlignment = Enum.TextYAlignment.Top
infoLabel.Text = "Loading..."

infoLabel.Parent = screenGui

RunService.RenderStepped:Connect(function()
    local char = player.Character
    local hrp = char and char:FindFirstChild("HumanoidRootPart")
    if hrp then
        local pos = hrp.Position
        infoLabel.Text = string.format(
            "PlaceId: %d\nGameId: %d\nTọa độ: X: %.1f, Y: %.1f, Z: %.1f",
            game.PlaceId, game.GameId, pos.X, pos.Y, pos.Z
        )
    else
        infoLabel.Text = string.format(
            "PlaceId: %d\nGameId: %d\nTọa độ: Loading...",
            game.PlaceId, game.GameId
        )
    end
end)
